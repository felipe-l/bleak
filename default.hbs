<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
	<title>{{meta_title}}</title>

	<meta name="HandheldFriendly" content="True" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="{{asset "css/dependencies.css"}}" />
	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

	{{ghost_head}}
</head>

<body class="{{body_class}}">
	<section id="wrapper">
		<div id="ajax-container">
			<nav id="nav" class="nav">
				<div class="nav-logo">
					<a href="{{@blog.url}}">
						{{#if @blog.logo}}
						<img src="{{@blog.logo}}" alt="Logo" />
						{{else}}
						<span class="name">{{@blog.title}}</span>
						{{/if}}						
					</a>
				</div>
				<div class="nav-menu">
					{{#if @blog.navigation}}
					<a class="menu" data-action="menu" data-target="menu"><i class="icon-menu"></i></a>
					{{/if}}
				</div>
			</nav>			
			{{{body}}}
			<div id="body-class" style="display: none;" class="{{body_class}}"></div>
			<footer id="footer">
				<section class="credits">
                    <span class="credits-theme"><!-- <i class="fa fa-facebook"></i><i class="fa fa-instagram"></i><i class="fa fa-twitter"></i><i class="fa fa-linkedin"></i></br></br><a href="/contact" style="font-size:35px;">Contact</a>--></span>
                    <span class="credits-software"><a style="font-size:35px; padding-bottom:5px;">Newsletter</a> </br> <a style="font-size:15px;">Sign up to our newsletter and never miss a post.</a> </br></br><input id="footer_email" type="text" value="" placeholder="Enter your e-mail" novalidate="" autocomplete="off">
            </br>
        </br>
    <a href="google.com"><i class="fa fa-facebook"></a></i><i class="fa fa-instagram"></i><i class="fa fa-twitter"></i><i class="fa fa-linkedin"></i>
                </span>
				</section>
			</footer>
			{{#if @blog.navigation}}
			{{navigation}}
			{{/if}}
		</div>
	</section>
	{{ghost_foot}}
	
	<script type="text/javascript" src="{{asset "js/dependencies.js"}}"></script>
	<script type="text/javascript" src="{{asset "js/script.js"}}"></script>
</body>
</html>